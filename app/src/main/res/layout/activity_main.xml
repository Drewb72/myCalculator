<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="drew.mycalculator.MainActivity">

    <Button
        android:text="5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button5"
        android:layout_toEndOf="@+id/button4"
        android:textSize="18sp"
        android:layout_above="@+id/button7"
        android:layout_alignTop="@+id/button4" />

    <Button
        android:text="3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button3"
        android:layout_alignBottom="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_alignTop="@+id/button2"
        android:textSize="18sp" />

    <Button
        android:text="2"
        android:id="@+id/button2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_toEndOf="@+id/button"
        android:textSize="18sp"
        android:layout_above="@+id/button5"
        android:layout_alignTop="@+id/button" />

    <Button
        android:text="4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button4"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:layout_above="@+id/button7"
        android:layout_alignTop="@+id/button6" />

    <Button
        android:text="7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button7"
        android:textSize="18sp"
        android:layout_above="@+id/button14"
        android:layout_alignParentStart="true" />

    <Button
        android:text="8"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button8"
        android:textSize="18sp"
        android:layout_above="@+id/button14"
        android:layout_toEndOf="@+id/button7" />

    <Button
        android:text="9"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button9"
        android:textSize="18sp"
        android:layout_above="@+id/button14"
        android:layout_toEndOf="@+id/button8" />

    <Button
        android:text="6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button6"
        android:textSize="18sp"
        android:layout_above="@+id/button8"
        android:layout_toEndOf="@+id/button5" />

    <Button
        android:text="1"
        android:id="@+id/button"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:textSize="18sp"
        android:layout_above="@+id/button4"
        android:layout_alignParentStart="true" />

    <Button
        android:text="+"
        android:layout_width="75dp"
        android:id="@+id/button13"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button9"
        android:layout_above="@+id/button15"
        android:layout_height="60dp" />

    <Button
        android:text="0"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/button0"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/button7"
        android:layout_alignBottom="@+id/button14" />

    <Button
        android:text="*"
        android:layout_width="75dp"
        android:id="@+id/button11"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:layout_height="60dp"
        android:layout_above="@+id/button12"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:text="/"
        android:layout_width="75dp"
        android:id="@+id/button10"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:layout_height="60dp"
        android:layout_above="@+id/button11"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button3" />

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/button15"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="68dp"
        android:layout_toEndOf="@+id/button14" />

    <Button
        android:text="="
        android:id="@+id/button14"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:layout_alignBottom="@+id/button15"
        android:layout_toEndOf="@+id/button0" />

    <Button
        android:text="-"
        android:layout_width="75dp"
        android:id="@+id/button12"
        android:textSize="28sp"
        android:fontFamily="sans-serif"
        android:layout_height="60dp"
        android:layout_above="@+id/button13"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button9" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:minHeight="178dp"
        tools:layout_centerVertical="true"
        android:textSize="24sp"
        android:layout_above="@+id/button3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/button" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2"
        android:layout_above="@+id/button2"
        android:layout_toStartOf="@+id/textView"
        android:textSize="20sp" />
</RelativeLayout>
